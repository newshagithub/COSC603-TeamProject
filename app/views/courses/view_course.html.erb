<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <%if false%><th>Progress</th><%end%>
    <th>Action</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <%if false %> <td><%= course.progress %></td> <%end%>
        <td><%= link_to 'Take Course', url_for(controller:'lessons', action: 'view_lessons', id:course.id ), class: 'btn btn-default btn-sm' %> </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
