<%- model_class = Lesson -%>
<div class="page-header">
  <h1><%=t @course.name %></h1>
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>

</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:course_id) %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.name %></td>
        <td><%= @course.name %>
        <td><%= link_to 'View Lectures', url_for(controller:'lectures', action: 'view_lectures', id:lesson.id, course_id:@course.id ), class: 'btn btn-default btn-sm' %> </td>
        <td><%= link_to 'Take Lesson', url_for(controller:'lectures', action: 'do_lecture', id:lesson.id, course_id:@course.id ), class: 'btn btn-default btn-sm' %> </td>
      </tr>
  <% end %>
  </tbody>
</table>

