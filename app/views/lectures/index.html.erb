<%- model_class = Lecture -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:reading) %></th>
      <th><%= model_class.human_attribute_name(:quizQuestions) %></th>
      <th><%= model_class.human_attribute_name(:quizAnswers) %></th>
      <th><%= model_class.human_attribute_name(:lesson_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= link_to lecture.id, lecture_path(lecture) %></td>
        <td><%= lecture.name %></td>
        <td><%= lecture.reading %></td>
        <td><%= lecture.quizQuestions %></td>
        <td><%= lecture.quizAnswers %></td>
        <td><%= lecture.lesson_id %></td>
        <td><%=l lecture.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lecture_path(lecture), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      lecture_path(lecture),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_lecture_path,
            :class => 'btn btn-primary' %>
