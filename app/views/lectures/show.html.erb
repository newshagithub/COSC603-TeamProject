<%- model_class = Lecture -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @lecture.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reading) %>:</strong></dt>
  <dd><%= @lecture.reading.html_safe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quizQuestions) %>:</strong></dt>
  <dd><%= @lecture.quizQuestions %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quizAnswers) %>:</strong></dt>
  <dd><%= @lecture.quizAnswers %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lesson_id) %>:</strong></dt>
  <dd><%= @lecture.lesson.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              lectures_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lecture_path(@lecture), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lecture_path(@lecture),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
